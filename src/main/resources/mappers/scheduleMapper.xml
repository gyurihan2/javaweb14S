<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.javaweb14S.dao.ScheduleDAO">
<!-- Select -->
	<!-- 상영관 전체 리스트 -->
	<select id="getSchduleList" resultType="movieVO">
		select * from schedule where playDate like concat('%',#{requestDate},'%');
	</select>
	
	
	
	
<!-- Insert -->
	<!-- 상영관 추가 -->
	<insert id="setTheaterInput">
		insert into theater values(default,#{vo.name},#{vo.themaIdx},#{vo.seat}, #{vo.work},now(),now());
	</insert>

	
	
		
<!-- Update -->
	<!-- 상영관 작동 여부 수정 -->
	<update id="setTheaterChangeWork">
		update theater set work=#{work}, modifyDate=now() where idx=#{idx};
	</update>
	
	
<!-- Delete -->
	<!-- 테마 삭제 -->
	<delete id="setThemaDelete">
		delete from thema where idx=#{idx};
	</delete>


</mapper>